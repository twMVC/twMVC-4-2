@model TemplatesExample.News
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <table>
        <tbody>
			<tr>
                <td class="tdm">@Html.LabelFor(p => Model.Title)
                </td>
                <td class="tdxl tdleft">
                    @Html.EditorFor(p => Model.Title)
                    @Html.ValidationMessageFor(p => Model.Title)
                </td>
            </tr>
			<tr>
                <td class="tdm">@Html.LabelFor(p => Model.Content)
                </td>
                <td class="tdxl tdleft">
                    @Html.EditorFor(p => Model.Content)
                    @Html.ValidationMessageFor(p => Model.Content)
                </td>
            </tr>
			<tr>
                <td class="tdm">@Html.LabelFor(p => Model.Enabled)
                </td>
                <td class="tdxl tdleft">
                    @Html.EditorFor(p => Model.Enabled)
                    @Html.ValidationMessageFor(p => Model.Enabled)
                </td>
            </tr>
			<tr>
                <td colspan="2" class="bottombar">
                    <input type="button" value="返回" onclick="location.href='/News/Index';"/>
                    <input type="submit" value="確認送出"/>
                </td>
            </tr>
        </tbody>
    </table>
}
